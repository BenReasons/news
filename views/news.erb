<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
</head>
<body>

    <!-- This section references the input location and summarizes local weather and national news -->
    <div class="jumbotron">
        <div class="container-sm">
            <h1><%= @location %>: Local Weather and National News</h1>
            <p>In <%= @location %>, it is currently <%= @current_temperature.round() %> degrees and <%= @current_conditions %>.</p>
        </div>
    </div>
    
    <!-- This section contains a 5-day weather forecast for the input location -->
    <div class="container-sm">
        <h3>5-Day Forecast</h3>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th width="10%"></th>
                    <% for day1 in @daily_forecast %>
                        <th width="18%"><%= Time.at(day1["time"]).strftime("%A: %m/%d") %></th>
                    <% end %>
                </tr>
                <tr>
                    <td width="10%">High</td>
                    <% for high_temp in @daily_forecast %>
                        <td width="18%"><%= high_temp["temperatureHigh"].round() %></td>
                    <% end %>
                </tr>
                <tr>
                    <td width="10%">Low</td>
                    <% for low_temp in @daily_forecast %>
                        <td width="18%"><%= low_temp["temperatureLow"].round() %></td>
                    <% end %>
                </tr>
                <tr>
                    <td width="10%">Precip</td>
                    <% for precip in @daily_forecast %>
                        <% if precip["precipProbability"].round(1)*100>0 %>
                        <td width="18%"><%= precip["precipProbability"].round(1)*100 %>% chance of <%= precip["precipType"] %>.</td>
                        <% else %>
                        <td width="18%">No forecasted precipitation.</td>
                        <% end %>
                    <% end %>
                </tr>
                <tr> 
                    <td width="10%">Summary</td>
                    <% for day in @daily_forecast %>
                        <td wiedth="18%"><%= day["summary"] %></td>
                    <% end %>
                </tr>
            </table>
        </div>
    </div>

    <div class="container-sm">
    <h3>Top 3 Daily Headlines</h3>
    <% for article in @current_news %>
        <p><%= article["title"] %> - <a href="<%= article["url"] %>">Link to article</a></p>
    <% end %>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>